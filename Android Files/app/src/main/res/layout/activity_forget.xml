            android:textAllCaps="false"
            android:onClick="TestingFun"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is Fixed Part \n yes i am fixer"
            android:textSize="24dp"
